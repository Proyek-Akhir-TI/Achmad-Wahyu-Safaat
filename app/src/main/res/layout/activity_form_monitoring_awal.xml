<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".petugas.FormMonitoringAwal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitoring Fase Awal"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:elevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Detail Lahan"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/tv_nama_pemilik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detail"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Achmad Wahyu Safaat"
                        android:textColor="@color/colorTextBlack" />

                    <TextView
                        android:id="@+id/tv_nomor_induk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/div_detail"
                        android:layout_alignParentRight="true"
                        android:text="psn/001/121" />

                    <LinearLayout
                        android:id="@+id/div_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_nama_pemilik"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_lokasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:text="Dusun Krajan, RT.01/RW.01, Desa Songgon, Kec. Songgon, Kabupaten Banyuwangi" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_luas_lahan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Luas Lahan : 1 hektar" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_rencana_benih"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Benih rencana : Impari 32" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_tgl_sebar_monitoring"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rencana sebar benih : 2 Maret 2021" />

                        <TextView
                            android:id="@+id/tv_tgl_tanam_monitoring"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rencana tanam benih : 28 Maret 2021" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Lokasi Saat Ini"
                        android:textAlignment="center"
                        android:padding="12dp"
                        android:background="@color/colorPrimary"
                        android:textColor="#ffffff"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_lokasi_sekarang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/poppins" />

                    <Button
                        android:id="@+id/btn_lokasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:backgroundTint="@color/colorAccent"
                        android:textAllCaps="false"
                        android:layout_marginBottom="12dp"
                        android:text="Perbarui Lokasi" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Form Laporan Fase Awal"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="12dp">

                    <CheckBox
                        android:id="@+id/cb_letak_areal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="false"
                        android:fontFamily="@font/poppins"
                        android:text="Kebenaran Letak Areal" />

                    <CheckBox
                        android:id="@+id/cb_luas_areal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="false"
                        android:fontFamily="@font/poppins"
                        android:text="Kebenaran Luas Areal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_isolasi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:fontFamily="@font/poppins"
                            android:text="Isolasi" />

                        <CheckBox
                            android:id="@+id/cb_sejarah"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:fontFamily="@font/poppins"
                            android:text="Sejarah Lahan" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cb_asal_luas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="false"
                        android:fontFamily="@font/poppins"
                        android:text="Asal dan jumlah benih sumber" />

                    <CheckBox
                        android:id="@+id/cb_benih_sumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checked="false"
                        android:fontFamily="@font/poppins"
                        android:text="Benih sumber yang digunakan" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:hint="Catatan tambahan hasil monitoring">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_catatan_monitoring"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:height="170dp"
                            android:gravity="top"
                            android:inputType="text|textMultiLine" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:hint="Kesimpulan hasil monitoring">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_kesimpulan_monitoring"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:height="100dp"
                            android:gravity="top"
                            android:inputType="text|textMultiLine" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_submit_awal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:padding="12dp"
                        android:text="Kirim hasil monitoring"
                        android:textAllCaps="false" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>