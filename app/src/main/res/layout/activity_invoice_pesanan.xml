<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/colorLightGrey"
    tools:context=".pelanggan.pesananpelanggan.InvoicePesananActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detail Pesanan"
                    android:layout_toLeftOf="@+id/tv_status_pembayaran"
                    android:textSize="20sp"
                    android:padding="12dp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_status_pembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginVertical="10dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/custom_round_title"
                    android:backgroundTint="#A4FA7854"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="6dp"
                    android:text="belum bayar"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="12dp"
                    android:layout_below="@+id/tv_title_detail">

                    <LinearLayout
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title_detail">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pesanan dibuat"
                            android:fontFamily="@font/poppins"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_tanggal_pesanan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Minggu, 27 Juni 2020"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextBlack"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title_detail">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lahan"
                            android:fontFamily="@font/poppins"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_nama_lahan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sawah Tamansuruh"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextBlack"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Varietas Padi"
                            android:fontFamily="@font/poppins"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_varietas_padi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Impari 32"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextBlack"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total harga benih"
                            android:fontFamily="@font/poppins"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_ttl_harga_benih"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp. 76,800"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextBlack"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title_detail">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total biaya Jasa"
                            android:fontFamily="@font/poppins"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_ttl_biaya_jasa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp. 10,500"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextBlack"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title_detail">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rencana Sebar Benih"
                            android:fontFamily="@font/poppins"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_tgl_sebar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="30 Juni 2021"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextBlack"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title_detail">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rencana Tanam Benih"
                            android:fontFamily="@font/poppins"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/tv_tgl_tanam"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="15 Juli 2021"
                            android:fontFamily="@font/poppins"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextBlack"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"/>
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp">

            <LinearLayout
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_detail">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Pembayaran"
                    android:fontFamily="@font/poppins"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tv_total_biaya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp 87,300"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingHorizontal="20dp"
                android:paddingVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Metode Pembayaran"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/colorTextBlack"
                    android:textStyle="bold"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#052055">

                    <RelativeLayout
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/nama_rekening"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rekening BCA"
                            android:textColor="#fff"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_below="@id/nama_rekening"
                            android:layout_width="wrap_content"
                            android:textColor="#fff"
                            android:layout_height="wrap_content"
                            android:text="an Rudi Habibi - 230002998128"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="*NB : Kirim detail pesanan dan bukti transfer kepada admin (082331889111)"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali ke Beranda"
        android:padding="12dp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>