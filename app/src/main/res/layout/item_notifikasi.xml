<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/img_notif"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_baseline_notifications"
            android:layout_weight="1"/>


            <LinearLayout
                android:layout_marginStart="12dp"
                android:id="@+id/div_notif"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_notif"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Title Notifikasi"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Detail Notifikasi"
                    android:layout_marginBottom="12sp"/>

                <TextView
                    android:id="@+id/tv_tgl_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_clock_12"
                    android:drawableTint="@android:color/darker_gray"
                    android:drawablePadding="6dp"
                    android:layout_alignParentRight="true"
                    android:text="tanggal notifikasi"/>

            </LinearLayout>

    </RelativeLayout>







</androidx.cardview.widget.CardView>